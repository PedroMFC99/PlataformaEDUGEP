@page
@model LoginModel

@{
    ViewData["Title"] = "Entrar";
}

<div class="container" style="background: url('@Url.Content("~/images/identity-background-form.jpg")') no-repeat center center; background-size: cover; padding: 20px; border-radius: 8px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
    <div class="row justify-content-center">
        <div class="col-md-6" style="background: rgba(255, 255, 255, 0.8); padding: 20px; border-radius: 5px;">
            <section>
                <form id="account" method="post">
                    <h3 class="text-center">Efetuar login</h3>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label">Palavra-passe</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Entrar</button>
                    </div>
                    <div class="text-center">
                        <p><a id="forgot-password" asp-page="./ForgotPassword">Esqueceu-se da palavra-passe?</a></p>
                        <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registar como novo utilizador</a></p>
                        <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar ativação do email</a></p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
