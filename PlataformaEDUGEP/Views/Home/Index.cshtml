@{
    ViewData["Title"] = "Home Page";
}

@if (TempData["AccountDeleted"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["AccountDeleted"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="text-center">
    <h1 class="display-4" style="color: #001DB3;">Bem-vindo</h1>
    <img src="https://i.ytimg.com/vi/3mi99F3HASE/hq720.jpg?sqp=-oaymwEhCK4FEIIDSFryq4qpAxMIARUAAAAAGAElAADIQj0AgKJD&rs=AOn4CLCnCUiF3Ex-hSI4risP8hX5h52XMA" alt="Plataforma EDUGEP" style="max-width:100%;height:auto;">
</div>

<!-- Cards container with display:flex to align cards horizontally -->
<div style="display: flex; justify-content: center; gap: 20px;">
    <div class="card border-primary mt-4 mb-3 shadow-lg" style="max-width: 20rem;">
        <div class="card-header text-center">#1</div>
        <div class="card-body">
            <h4 class="card-title text-center">Mais de <b>@ViewBag.TeacherCount</b> professores </h4>
            <div class="d-flex justify-content-center mt-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="45" height="45" fill="currentColor" class="bi bi-file-earmark-pdf" viewBox="0 0 16 16">
