@model PlataformaEDUGEP.Models.StoredFile

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>StoredFile</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" id="form-add-file" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="StoredFileName" class="control-label"></label>
                <input asp-for="StoredFileName" class="form-control" />
                <span asp-validation-for="StoredFileName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="fileData">File</label>
                <input type="file" class="form-control" name="fileData" />
                <span class="text-danger">@Html.ValidationMessage("FileData")</span>
            </div>

            <div class="form-group">
                <label asp-for="FolderId" class="control-label">Pasta</label>
                <select asp-for="FolderId" class="form-control" asp-items="ViewBag.FolderId"></select>
            </div>

            <input type="submit" value="Create" class="btn btn-primary" />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        document.getElementById('form-add-file').onsubmit = function (e) {
            var fileInput = document.getElementsByName('fileData')[0];
            if (fileInput.files.length === 0) {
                alert('Please select a file.');
                e.preventDefault(); // Prevent form from submitting
            }
        };
    </script>
}
