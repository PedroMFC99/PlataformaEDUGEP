@model PlataformaEDUGEP.Models.StoredFile

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>StoredFile</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StoredFileId" />

            <!-- Inside the form in your Edit view -->
            <div class="form-group">
                 <label for="newFileData">Alterar ficheiro</label>
                <input type="file" class="form-control" name="newFileData" />
            </div>

            <div class="form-group">
                <label asp-for="FolderId" class="control-label">Escolher pasta</label>
                <select asp-for="FolderId" class="form-control" asp-items="ViewBag.FolderId"></select>
                <span asp-validation-for="FolderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirmar alterações" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
