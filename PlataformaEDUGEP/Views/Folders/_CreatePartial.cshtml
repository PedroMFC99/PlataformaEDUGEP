@model PlataformaEDUGEP.Models.Folder

<form asp-action="Create" id="createFolderForm">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsHidden" class="control-label">Pasta escondida?</label>
        <input asp-for="IsHidden" />
    </div>

    <div class="form-group">
        <label for="tagSelect">Etiquetas</label>
        <!-- Add a specific ID or class for Select2 initialization -->
        <select id="tagSelect" asp-items="@(new SelectList(ViewBag.TagItems, "Value", "Text"))" class="form-control select2-tag-select" multiple="multiple" name="SelectedTagIds" style="display: none;"></select>
    </div>

    <div class="form-group">
        <input type="submit" value="Criar" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}